<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.laughster.frankspadone" version="1.0.0">
  <name>Frank Spadone</name>
  <description>Frank Spadone</description>
  <author href="http://www.intellicomstudios.net" email="info@intellicomstudios.net">Robin Ozolins</author>
  <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
  <icon src="icon.png"/>
  <platform name="android">
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="res/screen/android/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="res/screen/android/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="res/screen/android/splash-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="res/screen/android/splash-land-xxhdpi.png" density="land-xxhdpi"/>

        <splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
        <splash src="res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
      
        <icon src="res/android/ldpi.png" density="ldpi" />
        <icon src="res/android/mdpi.png" density="mdpi" />
        <icon src="res/android/hdpi.png" density="hdpi" />
        <icon src="res/android/xhdpi.png" density="xhdpi" />
        <resource-file src="google-services.json" target="app/google-services.json" />
    </platform>
     <platform name="ios">
        <splash src="res/screen/ios/Default@2x~iphone~anyany.png" />
        <splash src="res/screen/ios/Default@2x~iphone~comany.png" />
        <splash src="res/screen/ios/Default@2x~iphone~comcom.png" />
        <splash src="res/screen/ios/Default@3x~iphone~anyany.png" />
        <splash src="res/screen/ios/Default@3x~iphone~anycom.png" />
        <splash src="res/screen/ios/Default@3x~iphone~comany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~anyany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~comany.png" />
        
        <!-- App Store -->
        <icon src="res/ios/icon/Icon-App-1024x1024@1x.png" platform="ios" width="1024" height="1024" />
        <!-- iPhone 6 / 6+ -->
        <icon src="res/ios/icon/Icon-App-60x60@3x.png" platform="ios" width="180" height="180" />

        <!-- iPhone / iPod Touch  -->
        <icon src="res/ios/icon/Icon-App-60x60@1x.png" platform="ios" width="60" height="60" />
        <icon src="res/ios/icon/Icon-App-60x60@2x.png" platform="ios" width="120" height="120" />

        <!-- iPad -->
        <icon src="res/ios/icon/Icon-App-76x76@1x.png" platform="ios" width="76" height="76" />
        <icon src="res/ios/icon/Icon-App-76x76@2x.png" platform="ios" width="152" height="152" />
        <icon src="res/ios/icon/Icon-App-83.5x83.5@2x.png" platform="ios" width="167" height="167" />

        <!-- Settings Icon -->
        <icon src="res/ios/icon/Icon-App-29x29@1x.png" platform="ios" width="29" height="29" />
        <icon src="res/ios/icon/Icon-App-29x29@2x.png" platform="ios" width="58" height="58" />
        <icon src="res/ios/icon/Icon-App-29x29@3x.png" platform="ios" width="87" height="87" />

        <!-- Spotlight Icon -->
        <icon src="res/ios/icon/Icon-App-40x40@1x.png" platform="ios" width="40" height="40" />
        <icon src="res/ios/icon/Icon-App-40x40@2x.png" platform="ios" width="80" height="80" />
        <icon src="res/ios/icon/Icon-App-40x40@3x.png" platform="ios" width="120" height="120" />
        
        <!-- iPhone / iPod Touch -->
        <icon src="res/ios/icon/Icon-App-57x57@1x.png" platform="ios" width="57" height="57" />
        <icon src="res/ios/icon/Icon-App-57x57@2x.png" platform="ios" width="114" height="114" />

        <!-- iPad -->
        <icon src="res/ios/icon/Icon-App-72x72@1x.png" platform="ios" width="72" height="72" />
        <icon src="res/ios/icon/Icon-App-72x72@2x.png" platform="ios" width="144" height="144" />

        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/ios/icon/Icon-App-29x29@1x.png" platform="ios" width="29" height="29" />
        <icon src="res/ios/icon/Icon-App-29x29@2x.png" platform="ios" width="58" height="58" />

        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/ios/icon/Icon-Small-50x50@1x.png" platform="ios" width="50" height="50" />
        <icon src="res/ios/icon/Icon-Small-50x50@2x.png" platform="ios" width="100" height="100" />
        
        <resource-file src="GoogleService-Info.plist" />
    </platform>
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="orienation" value="portrait" />
    <preference name="permissions" value="none" />
    <preference name="target-device" value="handset" />
    <preference name="deployment-target" value="8.0" />
    <preference name="DisallowOverscroll" value="true"/>
    
    <plugin name="phonegap-plugin-push" spec="~2.3.0" />
    <plugin name="cordova-plugin-splashscreen" />
    <plugin name="cordova-plugin-dialogs" />
    <plugin name="cordova-plugin-geolocation" />
    <plugin name="cordova-plugin-inappbrowser" spec="~3.1.0" />
    <plugin name="cordova-plugin-background-mode" spec="~0.7.3" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.4" />
    <!-- White list https access to Youtube -->
    <allow-navigation href="https://*youtube.com/*"/>
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    
    <edit-config target="NSLocationAlwaysAndWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
        <string>This helps us recommend nearby events you might want to attend.</string>
    </edit-config>
    <edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
        <string>This helps us recommend nearby events you might want to attend.</string>
    </edit-config>
    <edit-config target="NSLocationAlwaysUsageDescription" file="*-Info.plist" mode="merge">
        <string>This helps us recommend nearby events you might want to attend.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="UIStatusBarHidden">
        <true />
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="UIViewControllerBasedStatusBarAppearance">
        <false />
    </edit-config>
    <preference name="phonegap-version" value="cli-9.0.0" />
</widget>
